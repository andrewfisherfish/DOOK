nav(role="navigation",
ng-init="uiState.switch({'isNavbarNavigation':uiState.is('screen-size','screen-md')||uiState.is('screen-size','screen-lg'),'isNavbarSearch':false,'isNavbarLogin':false})",
ng-class="{'is-navbar-navigation':uiState.is('isNavbarNavigation'),'is-navbar-login':uiState.is('isNavbarLogin'),'is-navbar-search':uiState.is('isNavbarSearch'),'user-menu-on':uiState.is('userMenuOn')}",
class="navbar navbar-inverse top")
    .container-fluid
        .navbar-header.navbar-search-hide
            a.navbar-brand(href='/')
                span.logo
                    img(src='img/logo-white.svg')
            ul.nav.pull-right.ul-buttons.container.navbar-toggle-ul
                li.pull-right
                    button.navbar-button(ng-click="uiState.switchOff('isNavbarLogin','isNavbarSearch').switch('isNavbarNavigation')", type='button')
                        i.fa.fa-bars(ng-show="uiState.is('isNavbarNavigation',false)")
                        i.fa.fa-close(ng-show="uiState.is('isNavbarNavigation',true)")
                li.pull-right
                    button.navbar-button.login(ng-if="uiState.is('isLoggedIn',false)",ng-click="uiState.switch('isLoggedIn',true)", type='button')
                        h4.hide-on-xs Log In
                        i.fa.fa-user
                li.pull-right
                    button.navbar-button.user(
                    ng-if="uiState.is('isLoggedIn',true)",
                    type='button',
                    ng-mouseleave="uiState.switch('userMenuOn',false)",
                    ng-mouseenter="uiState.switch('userMenuOn',true)"
                    )
                        user-logged-in
                //li.pull-right
                //    button.navbar-button(ng-click="uiState.switch({'isNavbarSearch':true,'isNavbarLogin':false,'isNavbarNavigation':false})", type='button')
                //        i.fa.fa-search

        .navbar-search.navbar-search-show.navbar-login-hide
            .navbar-brand-search
                .form-group.inner-addon.left-addon
                    i.fa.fa-search
                    input.form-control(type='search')
            button.navbar-toggle-like(ng-click="uiState.switch('isNavbarSearch')", type='button')
                i.fa.fa-close

        ul.nav.navbar-nav.content-menu.navbar-login-show.navbar-search-hide
            li
                a(href='/Settings')
                    h4 Settings
            li
                a(href='#',ng-click="uiState.switchOff('isLoggedIn','isNavbarLogin').switch('isNavbarNavigation',true)")
                    h4 Log out
        ul.nav.navbar-nav.content-menu.navbar-navigation-show.navbar-search-hide
            //li(ng-if="uiState.is('isLoggedIn')")
            //    a(href='/Purchased')
            //        h4 Purchased
            li
                a(href='/Products')
                    h4 Products
            li
                a(href='/Authors')
                    h4 Authors
            li
                a(href='/About')
                    h4 About

        ul.nav.navbar-nav.navbar-right.ul-buttons.user-menu.navbar-search-hide
            li
                button.navbar-button.login(ng-if="uiState.is('isNavbarLogin',false)&&uiState.is('isLoggedIn',false)",ng-click="uiState.switch('isLoggedIn',true)", type='button')
                    h4.hide-on-xs Log In
                    i.fa.fa-user
            li
                button.navbar-button.user(
                ng-if="uiState.is('isNavbarLogin',false)&&uiState.is('isLoggedIn',true)",
                type='button'
                ng-mouseleave="uiState.switch('userMenuOn',false)",
                ng-mouseenter="uiState.switch('userMenuOn',true)"
                )
                    user-logged-in

    ul.nav.navbar-nav.content-menu-sub.container-fluid(
    ng-mouseleave="uiState.switch('userMenuOn',false)",
    ng-mouseenter="uiState.switch('userMenuOn',true)"
    )
        li
            a(
            href='#',
            ng-click="uiState.switchOff('isLoggedIn','isNavbarLogin','userMenuOn')"
            )
                h4 Log out
        li
            a(href='/Settings')
                h4 Settings

    block header